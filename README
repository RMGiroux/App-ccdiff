# Colors (on two xterms: one normal and one with bg black)
ccdiff -r                    term*
ccdiff    --pink             term*
ccdiff -r --pink             term*
ccdiff    --no-color         term*
ccdiff    --no-color --fancy term*
ccdiff -r --no-color --fancy term*
ccdiff -r --old=blue         term*
ccdiff -r --new=blue         term*
ccdiff    --bg=black         term*

ccdiff -u                    term*
ccdiff -u0                   term*

